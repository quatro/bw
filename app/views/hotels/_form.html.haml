= simple_form_for [model.tenant, model] do |f|

  .row.mb-2
    .col-sm-6
      .page-header
        %h4 General
      %hr

      - if model.errors.any?
        .alert.alert-danger
          #{model.errors.full_messages.join(', ')}

      =f.input :tenant, as: :hidden
      =f.input :name
      =f.input :phone_number
      =f.input :contract_start_date, as: :string, input_html:{class:'datepicker'}
      =f.input :contract_end_date, as: :string, input_html:{class:'datepicker'}
      =f.input :address
      =f.input :city
      =f.input :state, as: :select, collection: states
      =f.input :zip
      =f.input :notes

    .col-sm-6
      .single
        .page-header
          %h4 Single Bed Rates
        %hr
        =f.input :rate, label: "Client Rate"
        =f.input :private_rate, label: "Hotel LNR"

      %br
      .double
        .page-header
          %h4 Double Bed Rates
        %hr
        =f.input :double_rate, label: "Client Rate"
        =f.input :double_private_rate, label: "Hotel LNR"

  .row.mb-2
    .col-sm-6
      =f.submit form_submit_label(model), class: 'btn btn-success'


:javascript

    var ready = function() {

    $('.datepicker').datepicker({
      dateFormat:"yy-mm-dd"
    });
    
  }

  $(document).ready(ready);
