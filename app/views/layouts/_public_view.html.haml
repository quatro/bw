
%body.hold-transition.sidebar-mini.layout-fixed
  .wrapper
    %nav.main-header.navbar.navbar-expand.navbar-white.navbar-light{style:'margin-left: 0px !important;'}
      %ul.navbar-nav
        -#%li.nav-item
          %a.nav-link{"data-widget" => "pushmenu", :href => "#", :role => "button"}
            %i.fas.fa-bars
        %li.nav-item.d-none.d-sm-inline-block
          %a.nav-link{href: root_path} Home
        %li.nav-item.d-none.d-sm-inline-block
          %a.nav-link{href: privacy_policy_path} Privacy Policy

    .content-wrapper{style:'margin-left: 0px !important;'}
      %section.content
        .container-fluid
          .row
            .col-lg-12{style:'padding: 20px;'}
              .row.justify-content-center
                .col-lg-12

                  - flash.each do |type, msg|
                    - alert_class = alert_class_for_type(type)
                    %span.alert{class: alert_class}
                      #{msg}

                  %br
                  %br
                  =yield



                -#:javascript
                -#  // reject blank messages. this allows us to blank out library messages we don't want flashed in locale
                -#  // files (e.g. devise) and they won't be displayed.
                -#  ShowToaster(#{flash.reject {|type, msg| msg.blank? }.to_json.html_safe});



