- filter_reset_url = local_assigns[:filter_reset_url].nil? ? request.url : filter_reset_url

= search_form_for q, url: request.url do |f|

  .row.mb-2
    .col-sm-12
      .form-group
        =f.label :date_from_gteq, "Date From"
        =f.search_field :date_from_gteq, class:'form-control datepicker'

      .form-group
        =f.label :date_to_lt, "Date To"
        =f.search_field :date_to_lt, class:'form-control datepicker'

      .form-group
        =f.label :rooms_formatted_cont, "Guest Names Include"
        =f.search_field :rooms_formatted_cont, class:'form-control'

      .form-group
        =f.label :requestor_full_name_cont, "Requestor"
        =f.search_field :requestor_full_name_cont, class:'form-control'



  -#\# Attributes may be chained. Search multiple attributes for one value...
  -#\#{f.label :name_or_description_or_email_or_articles_title_cont}
  -#\#{f.search_field :name_or_description_or_email_or_articles_title_cont}
  -#


  .row.mb-2
    .col-sm-12
      =f.submit "Search", class: 'btn btn-success'
      =link_to 'Reset', filter_reset_url, class:'btn btn-default'



:javascript

    var ready = function() {

    $('.datepicker').datepicker({
      dateFormat:"yy-mm-dd"
    });

  }

  $(document).ready(ready);